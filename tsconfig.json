{
    // Typescript configuration file: provides options to the Typescript compiler (tsc) and makes VSCode recognize
    // this folder as a TS project, enabling the VSCode build tasks "tsc: build" and "tsc: watch"
    "compilerOptions": {
        "target": "ES5",                        // Compatible with older browsers
        "module": "UMD",                        // Compatible with both Node.js and browser
        "moduleResolution": "node",             // Tell tsc to look in node_modules for modules
        "sourceMap": true,                      // Create *.js.map files
        "jsx": "react",                         // Causes inline XML (JSX code) to be expanded
        "strict": true,                         // Strict types, eg. prohibits 'var x=0; x=null'
        "alwaysStrict": true                    // Enable Javas,cript's "use strict" mode
    },
    "include": ["**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
}